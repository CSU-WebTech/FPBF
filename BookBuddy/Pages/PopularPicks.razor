@page "/Popular-Picks"

<PageTitle>Popularpicks</PageTitle>

<section class="about-section text-center" id="about">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8">
               
                 <div class="col-mod-10 col-lg-8 mx-auto text-center">
                    <h2 class="text-black mb-4">Lets explore!<i class="fa-solid fa-shuttle-space fa-rotate-270 text-white"></i></h2>
                    <p class="text-black-50">
                        Enter the book name to explore into different genres.
                    </p>
                    <form class="form-signup" id="contactForm" data-sb-form-api-token="API_TOKEN">
                        <div class="row input-group-newsletter">
                            <div class="col">
                                <input class="form-control" id="bookName"ctype="book" placeholder="Enter book name..." aria-label="Enter book name.." data-sb-validations="required,book/">
                            </div>
                            <div class="col-auto">
                                <button class="btn btn-primary" id="submitButton type="submit">
                                    submit
                                </button>
                            </div>
                        </div>
                        <div class="invalid-feedback mt-2" data-sb-feedback="bookName:required">book is required.</div>
                        <div class="invalid-feedback mt-2" data-sb-feedback="bookName:email">book is not valid.</div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

